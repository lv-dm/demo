{% extends 'base.html.twig' %}

{% block title %}Finance manager{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% set sum = 0 %}    
    {% set loopOutput %}               
        {% for expense in expenses %}            
        {% set sum = sum + expense.amount %}        
        {% endfor %}    
    {% endset %}

    {{ loopOutput }}

    {% set isum = 0 %}    
    {% set loopOutput %}               
        {% for income in incomes %}            
        {% set isum = isum + income.amount %}        
        {% endfor %}    
    {% endset %}

    {{ loopOutput }}

    <style>
    dl {
        width: 50%;
        overflow: hidden;
        padding: 0;
        margin: 0
    }
    dt {
        float: left;
        width: 50%;
        padding: 0;
        margin: 0
    }
    dd {
        float: left;
        width: 50%;
        padding: 0;
        margin: 0
    }
    </style>

    <div class="alert alert-success shadow-sm" role="alert">
        <i class="fa-solid fa-money-bill"></i> Приходи: <b>{{ isum }}</b>
    </div>
    <div class="alert alert-danger shadow-sm" role="alert">
        <i class="fa-solid fa-money-bill"></i> Разходи: <b>{{ sum }}</b>
    </div>
    <div class="alert alert-info shadow-sm" role="alert">
        <i class="fa-solid fa-money-bill"></i> Balance: <b>{{ isum-sum }}</b>
    </div>

    <div class="card">
        <div class="card-header"><i class="fa-solid fa-info-circle fa-sm"></i> Информация</div>
        <div class="card-body shadow p-3">
            <div class="row">
                <div class="col-lg-8">
                    <dl class="dl-horizontal text-left">
                        <dt>Общо приходи</dt>
                        <dd>{{ isum }}лв.</dd>
                        <dt>Общо разходи</dt>
                        <dd>{{ sum }}лв.</dd>
                        <dt>Баланс</dt>
                        <dd>{{ isum-sum }}лв.</dd>
                    </dl>
                </div>
                <div class="col-lg-4">
                    <div id="chart" style="overflow: hidden; position: relative; right: 400px;"></div>
                </div>
            </div>
            
        </div>
    </div>

    <script>
        new Morris.Donut({
            element: 'chart',
            
            data: [
                
                { label: 'Разходи', value: {{ sum }} },
                { label: 'Приходи', value: {{ isum }} }
            ]
        });
    </script>

{% endblock %}
